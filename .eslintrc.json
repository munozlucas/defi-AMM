{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2],
        "object-curly-spacing": [2, "always"],
        "eol-last":[1, "always"],
        "arrow-parens": [1, "always"],
        "semi": [
            "error",
            "never"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "max-len": [
            2,
            {
                "code": 80,
                "tabWidth": 2,
                "ignoreUrls": true,
                "ignoreComments": true
            }
        ]
    }
}